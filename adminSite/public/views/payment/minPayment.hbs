<div class="pt-5 mb-3">
    {{#if success}}
    <div class="alert alert-success w-50 text-center m-auto" role="alert" id="message-alert">
        <strong>Thành công!</strong> {{success}}.
    </div>
    {{/if}}
    {{#if error}}
        <div class="alert alert-danger w-50 text-center m-auto" role="alert" id="message-alert">
        <strong>Thất bại</strong> {{error}}
    </div>
    {{/if}}
    {{#if info}}
    <div class="alert alert-danger w-50 text-center m-auto" role="alert" id="message-alert">
        <strong>lỗi!</strong> {{info}}
    {{/if}}

</div>
<div class="container">

    <div class="modal-dialog modal-dialog-centered">
        <!-- Modal content-->
        <div class="modal-content rounded-4">
            <div class="modal-header">
                <h4 class="modal-title text-left">Hạn mức thanh toán</h4>
            </div>
            <div class="modal-body">
                {{#with level}}
                <form class="form-change-payment" action="/payment/min-payment" method="POST">
                    <div class="form-group mb-3">
                        <label for="minPercent" class="form-label">Phần trăm thanh toán tối thiểu</label>
                        <input type="number" class="form-control" id="minPercent" value="{{phan_tram_han_muc}}" min="0"
                            max="100" name="minPercent" required>
                    </div>
                    <div class="form-group mb-3">
                        <label for="minMoney" class="form-label">Số tiền thanh toán tối thiểu</label>
                        <input type="number" class="form-control" id="minMoney" min="0" name="minMoney"
                            value="{{so_tien_thanh_toan_toi_thieu}}" required>
                    </div>

                    <div class="form-group mb-2">
                        <button type="submit" class="btn btn-success mb-3 w-100 f-btn">Save changes</button>
                    </div>
                </form>
                {{/with}}
            </div>
        </div>
    </div>
</div>

<script src="/js/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $("#message-alert").slideDown();
        window.setTimeout(function () {
            $("#message-alert").slideUp(500);
        }, 2000);
    });
</script>