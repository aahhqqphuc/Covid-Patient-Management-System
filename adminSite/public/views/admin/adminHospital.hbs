
<body>
    
    <div class="row" style="padding-top: 60px;">
        <div class="col-6">
            <h1>Danh sách bệnh viện</h1>
        </div>

    </div>

    <table class="table table-bordered" id="AccountTable">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Tên bệnh viện</th>
                <th scope="col">Vị trí</th>
                <th scope="col">Tổng sức chứa</th>
                <th scope="col">Hiện tại đang chứa</th>
                <th scope="col" class="text-end">Action</th>
            </tr>
        </thead>
        <tbody>

            {{#each hospital}}
            <tr>
                <td>{{tennoidieutri}}</td>
                <td>{{tinh}}, {{huyen}}, {{xa}}</td>
                <td>{{succhua}}</td>
                <td>{{soluonghientai}}</td>
                <td class="text-end">
                    <a href="/admin/hospital/detail?id={{this.mavitri}}" type="button" class="btn btn-light btn-small"><i class="bi bi-eye"></i>
                        </a>
                    <a href="/admin/hospital/delete?id={{this.mavitri}}" type="button" class="btn btn-light btn-small"><i class="bi bi-lock-fill"></i>
                        </a>
                </td>
            </tr>
            {{/each}}

        </tbody>
    </table>
    <nav aria-label="Page navigation example">
        {{{paginateHelper pagination paginationClass="pagination"}}}
    </nav>
</body>