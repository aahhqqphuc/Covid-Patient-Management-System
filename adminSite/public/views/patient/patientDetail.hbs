
    <body >
            <div id="layoutSidenav_content" style="margin-top:-20px">
                <main>
                    <div class="container-fluid px-4">
                        <h1 class="mt-4">Chi tiết bệnh nhân</h1>
                        <ol class="breadcrumb mb-4">
                            <li class="breadcrumb-item"><a href="/patient">Home</a></li>
                            <li class="breadcrumb-item active">Thông tin chi tiết của bệnh nhân <b> {{patient.ho_ten}} / CMND: {{patient.cmnd}} </b></li>
                        </ol>
                        <div class="tab">
                            <button class="tablinks" onclick="openTab(event, 'lsDieuTri')">Lịch sử điều trị bệnh</button>
                            <button class="tablinks" onclick="openTab(event, 'nguoi_lien_quan_up')">Người liên đới trên</button>
                            <button class="tablinks" onclick="openTab(event, 'nguoi_lien_quan_down')">Người liên đới dưới</button>
                            </div>
                        <div class="card mb-4 tabcontent" id="lsDieuTri">
                            <div class="card-header">
                                <i class="fas fa-table me-1"></i>
                                Lịch sử điều trị của bệnh nhân <b> {{patient.ho_ten}} / CMND: {{patient.cmnd}} </b>
                            </div>
                            <div class="card-body">
                                <table class="table table-bordered" >
                                    <thead class="thead-dark">
                                        <tr>
                                            <th>Tên bệnh viện</th>
                                            <th>Vị trí bệnh viện</th>
                                            <th>Trạng thái</th>
                                            <th>Ngày di chuyển</th>
                                            <th>Ngày cập nhật thông tin</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each detail}}
                                            <tr>
                                                <td>{{tennoidieutri}}</td>
                                                <td>{{tinh}}, {{huyen}}, {{xa}}</td>
                                                <td>{{status}}</td>
                                                <td>{{ngay_di_chuyen}}</td>
                                                <td>{{ngay_cap_nhat}}</td>
                                            </tr>
                                            {{/each}}
                                    </tbody>
                                </table>
                            </div>
                            <nav aria-label="Page navigation example">
                                {{{paginateHelper pagination1 paginationClass="pagination"}}}
                            </nav>
                        </div>
                        <div class="card mb-4 tabcontent" id="nguoi_lien_quan_down">
                            <div class="card-header">
                                <i class="fas fa-table me-1"></i>
                                Người bị <b> {{patient.ho_ten}} / CMND: {{patient.cmnd}} </b> lây bệnh
                            </div>
                            <div class="card-body">
                                <table class="table table-bordered" >
                                    <thead class="thead-dark">
                                        <tr>
                                            <th scope="col">Tên đầy đủ</th>
                                            <th scope="col">CMND</th>
                                            <th scope="col">Năm sinh</th>
                                            <th scope="col">Nơi tiếp xúc</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each trailDown}}
                                         <tr>
                                            <td>{{ho_ten}}</td>
                                            <td>{{cmnd}}</td>
                                            <td>{{nam_sinh}}</td>
                                            <td>{{noi_tiep_xuc_tinh}}, {{noi_tiep_xuc_huyen}}, {{noi_tiep_xuc_xa}}</td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                            <nav aria-label="Page navigation example">
                                {{{paginateHelper pagination2 paginationClass="pagination"}}}
                            </nav>
                        </div>

                        <div class="card mb-4 tabcontent" id="nguoi_lien_quan_up">
                            <div class="card-header">
                                <i class="fas fa-table me-1"></i>
                                Người liên đới trên của bệnh nhân <b> {{patient.ho_ten}} / CMND: {{patient.cmnd}} </b>
                            </div>
                            <div class="card-body">
                                <table class="table table-bordered" >
                                    <thead class="thead-dark">
                                        <tr>
                                            <th scope="col">Tên đầy đủ</th>
                                            <th scope="col">CMND</th>
                                            <th scope="col">Năm sinh</th>
                                            <th scope="col">Nơi tiếp xúc</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each trailUp}}
                                         <tr>
                                            <td>{{ho_ten}}</td>
                                            <td>{{cmnd}}</td>
                                            <td>{{nam_sinh}}</td>
                                            <td>{{noi_tiep_xuc_tinh}}, {{noi_tiep_xuc_huyen}}, {{noi_tiep_xuc_xa}}</td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                            <nav aria-label="Page navigation example">
                                {{{paginateHelper pagination3 paginationClass="pagination"}}}
                            </nav>
                        </div>
                </main>
    </body>
