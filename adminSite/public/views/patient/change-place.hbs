<div class="container-fluid">
  <h1 class="mt-5">Chuyển nơi điều trị</h1>
  <button type="button" class="btn btn-lg btn-secondary align-self-center mb-3" onclick="goBack()">Trở lại</button>
  <div class="card">
    <div class="card-body w-50">
      <form method="post" action="/patient/change-place/{{id}}" id="change-place-form">
        <div class="form-group row">
          <label for="floatingInput" class="col-4">Mã bệnh nhân</label>
          <input type="text" class="form-control col" value={{id}} readonly />
        </div>
        <div class="form-group row">
          <label for="floatingInput" class="col-4">Nơi điều trị hiện tại:</label>
          <input type="text" class="form-control col" value="{{place}}" readonly />
        </div>
        <div class="form-group row">
          <label for="floatingInput" class="col-4">Nơi điều trị mới: </label>
          <select name="place" id="place" required class="col form-select form-select-md border border-secondary">
            <option value="place-empty">---Chọn nơi điều trị---</option>
            {{#each places}}
              <option value={{mavitri}}>{{tennoidieutri}}</option>
            {{/each}}
          </select>
          <br />
          <span class="text-danger" hidden id="place-danger">Chưa chọn nơi điều trị</span>
        </div>
        <div class="form-group row">
          <button class="btn btn-primary col-4" type="submit">Chuyển nơi điều trị</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script
  src="https://code.jquery.com/jquery-3.6.0.js"
  integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk="
  crossorigin="anonymous"
></script>
