<div class="container-fluid">
  <h1 class="mt-5">Thay mật khẩu</h1>
  <button type="button" class="btn btn-lg btn-secondary align-self-center mb-3" onclick="goBack()">Trở lại</button>
  <div class="card w-50">
    <div class="card-body">
      <form method="post">
        <div class="form-group row">
          <label class="col-4">Mã bệnh nhân</label>
          <input type="text" class="form-control col" value={{id}} readonly />
        </div>
        <div class="form-group row">
          <label class="col-4">Tên bệnh nhân</label>
          <input type="text" class="form-control col" value={{id}} readonly />
        </div>
        <div class="form-group row">
          <label class="col-4">Mật khẩu cũ</label>
          <input type="password" class="form-control col" value={{state}} readonly />
        </div>
        <div class="form-group row">
          <label class="col-4">Mật khẩu mới</label>
          <input type="text" class="form-control col" value={{state}} readonly />
        </div>
        <div class="form-group row">
          <label class="col-4">Xác nhân mật khẩu mới</label>
          <input type="text" class="form-control col" value={{state}} readonly />
        </div>
        <div class="form-group row">
          <button class="btn btn-primary col-4 align-self-end" type="submit">Thay đổi</button>
        </div>
      </form>
    </div>
  </div>
</div>
<script type="text/javascript" src="/js/patient/change-state.js"></script>
<script type="text/javascript" src="/js/patient/validation.js"></script>
<script type="text/javascript">
  function goBack() { window.history.back(); }
</script>