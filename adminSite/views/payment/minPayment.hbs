<div class="container">
    <div class="modal-dialog modal-dialog-centered">
        <!-- Modal content-->
        <div class="modal-content rounded-4">
            <div class="modal-header">
                <h4 class="modal-title text-left">Hạn mức thanh toán</h4>
            </div>
            <div class="modal-body">
                <form class="form-change-payment" action="" method="POST">
                    <div class="form-group mb-3">
                        <label for="minPercent" class="form-label">Phần trăm thanh toán tối thiểu</label>
                        <input type="number" class="form-control" id="minPercent" value="10" min="0" max="100"
                            name="minPercent" required>
                    </div>
                    <div class="form-group mb-3">
                        <label for="minMoney" class="form-label">Số tiền thanh toán tối thiểu</label>
                        <input type="number" class="form-control" id="minMoney" min="0" name="minMoney" value="100000"
                            required>
                    </div>

                    <div class="form-group mb-2">
                        <button type="submit" class="btn btn-success mb-3 w-100 f-btn">Save changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>