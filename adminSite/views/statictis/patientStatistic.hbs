<link rel="stylesheet" href="/css/sb-admin-2.min.css">
<div id="wrapper">
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <ul class="row justify-content-center nav nav-tabs bg-light">
            <li class="nav-item">
                <a class="nav-link statistic-nav-link active" href="./patient">Thông tin ca nhiễm</a>
            </li>
            <li class="nav-item">
                <a class="nav-link statistic-nav-link" href="./product">Thông tin về gói nhu yếu phẩm</a>
            </li>
            <li class="nav-item">
                <a class="nav-link statistic-nav-link" href="./payment">Thông tin dư nợ, thanh toán</a>
            </li>
        </ul>

        <!-- Main Content -->
        <div id="content" class="content-statistical">

            <!-- Begin Page Content -->
            <div class="statistic-info container-fluid col-lg-8 col-md-10 col-sm-12">
                <!-- Page Heading -->
                <div class="d-sm-flex justify-content-center py-2">
                    <h1 class="h2 mb-0 text-gray-800 text-center">Thống kê thông tin ca nhiễm</h1>
                </div>

                <div class="mt-2">
                    <div>
                        <h3>Dữ liệu hôm nay</h3>
                        <label>Cập nhật ngày: {{timeUpdate}}</label>
                    </div>
                    <!-- Content Row -->
                    <div class="row justify-content-center">
                        <div class="col-lg-12 col-md-10 col-mb-10 mb-4">
                            <div class="card border-left-danger shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="text-lg text-center font-weight-bold text-danger text-uppercase mb-1">
                                        Đang điều trị</div>
                                    <div class="h5 mb-0 font-weight-bold text-center text-gray-800">{{f0}}</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row justify-content-center">
                        <div class="col-lg-4 col-md-10 col-mb-10 mb-4">
                            <div class="card border-left-warning shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="text-lg text-center font-weight-bold text-warning text-uppercase mb-1">
                                        Số ca F1</div>
                                    <div class="h5 mb-0 font-weight-bold text-center text-gray-800">{{f1}}</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-10 col-mb-10 mb-4">
                            <div class="card border-left-success shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="text-lg text-center font-weight-bold text-success text-uppercase mb-1">
                                        Số ca F2</div>
                                    <div class="h5 mb-0 font-weight-bold text-center text-gray-800">{{f2}}</div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-4 col-md-10 col-mb-10 mb-4">
                            <div class="card border-left-success shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="text-lg text-center font-weight-bold text-success text-uppercase mb-1">
                                        Số ca F3</div>
                                    <div class="h5 mb-0 font-weight-bold text-center text-gray-800">{{f3}}</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row justify-content-center">
                        <div class="col-lg-6 col-md-10 col-mb-10 mb-4">
                            <div class="card border-left-info shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="text-lg text-center font-weight-bold text-info text-uppercase mb-1">
                                        Số bệnh nhân khỏi bệnh</div>
                                    <div class="h5 mb-0 font-weight-bold text-center text-gray-800">{{cured}}</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-10 col-mb-10 mb-4">
                            <div class="card border-left-info shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="text-lg text-center font-weight-bold text-info text-uppercase mb-1">
                                        Số Bệnh nhân chuyển tuyến</div>
                                    <div class="h5 mb-0 font-weight-bold text-center text-gray-800">{{move}}</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mt-2">
                    <div class="">
                        <h3 class="">Dữ liệu toàn thời gian</h3>
                        <label>Cập nhật ngày: {{timeUpdate}}</label>
                    </div>

                    <div class="row justify-content-center">
                        <!-- Earnings (Monthly) Card Example -->
                        <div class="col-lg-6 col-md-10 col-mb-10 mb-4">
                            <div class="card border-left-danger shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="text-lg text-center font-weight-bold text-danger text-uppercase mb-1">
                                        Tổng số ca nhiễm</div>
                                    <div class="h5 mb-0 font-weight-bold text-center text-gray-800">{{totalInfectted}}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-10 col-mb-10 mb-4">
                            <div class="card border-left-success shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="text-lg text-center font-weight-bold text-success text-uppercase mb-1">
                                        Tổng số ca khỏi bệnh</div>
                                    <div class="h5 mb-0 font-weight-bold text-center text-gray-800">{{totalCured}}</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- /.container-fluid -->
        </div>
        <!-- End of Main Content -->

    </div>
    <!-- End of Content Wrapper -->

</div>