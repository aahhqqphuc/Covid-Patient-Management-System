<div id="wrapper">
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content" class="row justify-content-center content-statistical">
            <div class="container-fluid col-lg-10 col-md-10 col-sm-12">
                <div class="row">
                    <div class="col m-2">
                        <h1 class="h2 mb-0 text-gray-800">Tài khoản thanh toán của bệnh nhân</h1>
                    </div>

                </div>
                <div class="row" style="overflow: scroll;">
                    <table class="table table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">Id bệnh nhân</th>
                                <th scope="col">Tên bệnh nhân</th>
                                <th scope="col">Tài khoản</th>
                                <th scope="col">Hạn mức thanh toán tối thiểu</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each payAcc}}
                            <tr class="table-rows">
                                <th scope="row">{{id_benh_nhan}}</th>
                                <td><a href="">{{ho_ten}}</a></td>
                                <td>{{id_tai_khoan}}</td>
                                <td>
                                    {{han_muc_toi_thieu}}
                                    <a type="button" class="ml-2 text-info btn-change">Sửa</a>
                                    <div class="form-change d-none">
                                        <form action="paymentAcc/edit/{{id_tai_khoan}}" method="POST" class="row">
                                            <input type="number" name="newMinPay" id="" placeholder="Nhập giá trị mới" class="mt-2 ml-2 pl-2" required>
                                            <button type="submit" class="btn btn-sm btn-success mt-2 ml-2">Lưu</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- End of Main Content -->
    </div>
    <!-- End of Content Wrapper -->
</div>