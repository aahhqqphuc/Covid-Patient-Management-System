<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/patient">Bệnh nhân</a></li>
    <li class="breadcrumb-item active" aria-current="page">Chuyển nơi điều trị</li>
  </ol>
</nav>
<form method="post" action="/patient/change-place/{{id}}" id="change-place-form">
  <div class="col-3">
    <label for="floatingInput">Mã bệnh nhân: {{id}}</label>
  </div>
  <div class="col-3">
    <label for="floatingInput">Nơi điều trị hiện tại: {{place}}</label>
  </div>
  <div class="col-6">
    <label for="floatingInput">Nơi điều trị mới: </label>
    <select name="place" id="place" required>
      <option value="place-empty">---Chọn nơi điều trị---</option>
      {{#each places}}
        <option value={{mavitri}}>{{tennoidieutri}}</option>
      {{/each}}
    </select>
    <br />
    <span class="text-danger" hidden id="place-danger">Chưa chọn nơi điều trị</span>
  </div>
  <div class="col-2 d-grid mt-2">
    <button class="btn btn-primary" type="submit">Chuyển nơi điều trị</button>
  </div>
</form>

<script type="text/javascript" src="/js/patient/change-place.js"></script>
<script type="text/javascript" src="/js/patient/validation.js"></script>