<head>
  {{#each script}}
    <script src="{{this}}"></script>
  {{/each}}
</head>
<body>

  <div class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
      <!-- Navbar Brand-->
      <a class="navbar-brand ps-3" href="/patient">Home</a>
      <!-- Navbar Search-->
      <form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
        <div class="input-group">
          <input
            class="form-control"
            type="text"
            placeholder="Search for..."
            aria-label="Search for..."
            aria-describedby="btnNavbarSearch"
          />
          <button class="btn btn-primary" id="btnNavbarSearch" type="button"><i class="fas fa-search"></i></button>
        </div>
      </form>
      <!-- Navbar-->
      <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
        <li class="nav-item dropdown">
          <a
            class="nav-link dropdown-toggle"
            id="navbarDropdown"
            href="#"
            role="button"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          ><i class="fas fa-user fa-fw"></i></a>
          <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
            <li><a class="dropdown-item" href="#!">Settings</a></li>
            <li><a class="dropdown-item" href="#!">Activity Log</a></li>
            <li><hr class="dropdown-divider" /></li>
            <li><a class="dropdown-item" href="#!">Logout</a></li>
          </ul>
        </li>
      </ul>
    </nav>
  </div>
  <div class="row" style="padding-top: 60px;">
    <div class="col-6">
      <h1>Covid patient list</h1>
    </div>
    <div class="col-6 d-flex justify-content-end">
      <a href="/patient/add" type="button" class="btn btn-primary align-self-center">Thêm bệnh nhân mới</a>
    </div>

  </div>

  <table class="table table-bordered" id="datatablesSimple">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Tên đầy đủ</th>
        <th scope="col">CMND</th>
        <th scope="col">Năm sinh</th>
        <th scope="col">Quê quán</th>
        <th scope="col">Trạng thái bệnh nhân</th>
        <th scope="col">Nơi điều trị hiện tại</th>
        <th scope="col" class="text-end">Action</th>
      </tr>
    </thead>
    <tbody>

      {{#each patients}}
        <tr>
          <td>{{ho_ten}}</td>
          <td>{{cmnd}}</td>
          <td>{{nam_sinh}}</td>
          <td>{{tinh}}, {{huyen}}, {{xa}}</td>
          <td>{{trang_thai}}</td>
          <td>{{tennoidieutri}}</td>
          <td class="text-end">
            <a href="/patient/detail?id={{this.id_benh_nhan}}" type="button" class="btn btn-light btn-small"><i
                class="bi bi-eye"
              ></i>
              Chi tiết</a>
            <a href="/patient/change-state/{{this.id_benh_nhan}}" type="button" class="btn btn-light btn-small"><i
                class="bi bi-pencil"
              ></i>
              Chuyển trạng thái</a>
            <a href="/patient/change-place/{{this.id_benh_nhan}}" type="button" class="btn btn-light btn-small"><i
                class="bi bi-pencil"
              ></i>
              Chuyển nơi điều trị</a>
          </td>
        </tr>
      {{/each}}

    </tbody>
  </table>

</body>