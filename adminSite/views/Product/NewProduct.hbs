<head>
    <style>
        input {
            width: auto;
        }
    </style>
</head>

<body>
    <div class="sb-nav-fixed">
        <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
            <!-- Navbar Brand-->
            <a class="navbar-brand ps-3" href="/">Home</a>
            <!-- Navbar Search-->
            <form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
                <div class="input-group">
                    <input class="form-control" type="text" placeholder="Search for..." aria-label="Search for..."
                        aria-describedby="btnNavbarSearch" />
                    <button class="btn btn-primary" id="btnNavbarSearch" type="button"><i
                            class="fas fa-search"></i></button>
                </div>
            </form>
            <!-- Navbar-->
            <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button"
                        data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                        <li><a class="dropdown-item" href="#!">Settings</a></li>
                        <li><a class="dropdown-item" href="#!">Activity Log</a></li>
                        <li>
                            <hr class="dropdown-divider" />
                        </li>
                        <li><a class="dropdown-item" href="#!">Logout</a></li>
                    </ul>
                </li>
            </ul>
        </nav>
    </div>
    <div class="row" style="padding-top: 60px;">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Create New Product</li>
            </ol>
        </nav>
    </div>
    <form method="post" action="/product/add" enctype="multipart/form-data">
        <div class="col-6">
            <label for="floatingInput">Tên nhu yếu phẩm</label>
            <div class="form-floating mb-3">
                <input required type="text" class="form-control p-0" name="ten_sanpham" />
            </div>
        </div>
        <div class="col-6">
            <label for="floatingInput"> Giá tiền </label>
            <div class="form-floating mb-3">
                <input required type="text" class="form-control" name="gia_tien" />
            </div>
        </div>
        <div class="col-6">
            <label for="floatingInput"> Đơn vị </label>
            <div class="form-floating mb-3">
                <input type="text" readonly type="text" class="form-control" value="VND" />
            </div>
        </div>
        <div class="col-6">
            <label for="floatingInput"> Số lượng </label>
            <div class="form-floating mb-3">
                <input type="number" required type="text" class="form-control" name="con_lai" />
            </div>
        </div>
        <div class="col-6">
            <label for="floatingInput"> Image </label>
            <div class="form-floating mb-3">
                <input data-preview-file-type="text" id="fileup" class='file' type="file" required type="text"
                    class="form-control" id='image' name="ImagePath" multiple data-browse-on-zone-click="true" />
            </div>
        </div>
        <div class="col-12 d-grid">
            <button class="btn btn-primary" style="width: 10%;" type="submit">Create</button>
        </div>
    </form>
</body>